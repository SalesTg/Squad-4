@model CadastroCashback.Models.Campanha


@{
    ViewData["Title"] = "Confirmação de exclusão da campanha";
}
<div>

<h3>
    Certeza que deseja deletar a campanha @(Model.Nome)?
</h3>
    
</div>

<div class="d-flex">
    <form asp-action="DeletarCampanha" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-danger me-2 col-4">Excluir</button>
        <a class="btn btn-secondary" asp-controller="Cadastrados" asp-action="Index">Voltar</a>
    </form>
</div>
